# size: 100, 100
# size_hint



<Container>:
    AnchorLayout:
        id: anch1
        spacing: 20
        canvas:
            Rectangle:
                id: rec1
                source: 'img/darkPurple.png'
                size: self.size
                pos: self.pos
        Button:
            id: bt1
            size_hint: 0.19, 0.23
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_normal: 'img/button.png'
            background_down: 'img/button.png'
            on_press:
                root.remove_start_game_screen()
    AnchorLayout:
        id: anch2
        anchor_x: 'center'
        anchor_y: 'top'
        BoxLayout:
            id: box1
            orientation: 'vertical'
            size_hint: .4, .4
            Label:
                color: 1, 1, 0, 1
                text: 'TryToSave'
                font_size: 70
    AnchorLayout:
        id: anch3
        anchor_x: 'left'
        anchor_y: 'center'
    AnchorLayout:
        id: anch4
        anchor_x: 'right'
        anchor_y: 'center'




