# size: 100, 100
# size_hint



<Container>:
    id: fl1
    orientation: 'vertical'
    spacing: 20
    canvas:
        Rectangle:
            source: 'img/darkPurple.png'
            size: self.size
            pos: self.pos
    Button:
        size_hint: 0.19, 0.23
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        background_normal: 'img/button.png'
        background_down: 'img/button.png'


<Anch>:
    anchor_x: 'center'
    anchor_y: 'top'
    Label:
        color: 1, 1, 0, 1
        text: 'TryToSave'
        font_size: self.height
        size_hint: None, None



